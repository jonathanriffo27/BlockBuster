<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <td><%= link_to "Mostrar", client, class: "btn btn-secondary btn-sm" %></td>
    <td><%= link_to "Editar", edit_client_path(client), class: "btn btn-secondary btn-sm" %></td>
    <td><%= button_to "Borrar", @client, class: "btn btn-danger btn-sm", method: :delete %></td>
  </tr>
</div>
